FROM golang:1.21-alpine AS builder

WORKDIR /build

# Install dependencies
RUN apk add --no-cache gcc musl-dev

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build agent
RUN CGO_ENABLED=0 go build -o monitor-agent ./cmd/agent

FROM alpine:latest

WORKDIR /app

# Copy binary
COPY --from=builder /build/monitor-agent .

# Run agent
CMD ["./monitor-agent"]
